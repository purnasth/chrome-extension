{
    "manifest_version": 3,
    "name": "Font Changer",
    "version": "1.0",
    "description": "Change the font on any webpage.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "./favicon.png",
        "48": "./favicon.png",
        "128": "./favicon.png"
      }
    },
    "permissions": [
      "tabs",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
  